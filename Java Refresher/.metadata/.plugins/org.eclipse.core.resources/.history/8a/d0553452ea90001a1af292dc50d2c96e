package InterfaceMethod;

public class Product implements Iprintable {
	
	private String code, desc;
	private double price;
	
	public Product(String code, String desc, double price) {
		this.code = code;
		this.desc = desc;
		this.price = price;
	}
	
	// get and set methods for the fields
	
	/* Not required as it is specified as a default method
	public void print() { // implements the Printable interface
	}
	*/
	
	/* If you want to change the functionality of a default method, you can override it, just like a superclass
	@Override
	public void print() {
		System.out.println(getDescription() + "|" + getPriceFormatted());
	}
	*/
	
	/*Iprintable p = ProductDB.getProduct("java"); - using print method of Product class
	p.print();*/

}
